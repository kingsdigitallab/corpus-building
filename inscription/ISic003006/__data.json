                          \u003C/dimensions>\n                            \u003C/handNote>\n                        \u003C/handDesc>\n                    \u003C/physDesc>\n                    \u003Chistory>\n                        \u003Corigin>\n                            \u003CorigPlace>\n                                \u003CplaceName type=\"ancient\" ref=\"http://pleiades.stoa.org/places/462270\">Catina\u003C/placeName>\t\t\n                                \u003CplaceName type=\"modern\" ref=\"http://sws.geonames.org/2525068\">Catania\u003C/placeName>\n                            \t\u003Cgeo>37.49223, 15.07041\u003C/geo>\n\t\t\u003C/origPlace>\n                            \u003CorigDate datingMethod=\"#julian\" notBefore-custom=\"0401\" notAfter-custom=\"0500\" precision=\"low\">5th century (Manganaro; Ferrua restores with consular date of 388 CE)\u003C/origDate>\n                        \u003C/origin>\n                        \u003Cprovenance type=\"found\" subtype=\"discovered\">Discovered in the necropolis of via Dottor Consoli\u003C/provenance>\n                        \u003Cprovenance type=\"observed\">Observed by Manganaro in the courtyard of Castello Ursino\u003C/provenance>\n                        \u003Cprovenance type=\"observed\" subtype=\"autopsied\">None\u003C/provenance>\n                        \u003Cacquisition/>\n                    \u003C/history>\n                \u003C/msDesc>\n            \u003C/sourceDesc>\n        \u003C/fileDesc>\n        \u003CencodingDesc>\n             \u003Cp>Encoded following the latest EpiDoc guidelines\u003C/p>\n             \u003Cxi:include href=\"../alists/ISicily-taxonomies.xml\">\n                 \u003Cxi:fallback>\n                     \u003Cp>Taxonomies for ISicily controlled values\u003C/p>\n                 \u003C/xi:fallback>\n             \u003C/xi:include>\n\t  \u003Cxi:include href=\"../alists/charDecl.xml\">\n\t     \u003Cxi:fallback>\n\t       \u003Cp>ISicily glyphs authority list\u003C/p>\n\t     \u003C/xi:fallback>\n\t   \u003C/xi:include>\n         \u003C/encodingDesc>\n        \u003CprofileDesc>\n            \u003CcalendarDesc>\n                \u003Ccalendar xml:id=\"julian\">\n                    \u003Cp>Julian Calendar\u003C/p>\n                \u003C/calendar>\n            \u003C/calendarDesc>\n            \u003ClangUsage>\n                \u003Clanguage ident=\"en\">English\u003C/language>\n                \u003Clanguage ident=\"it\">Italian\u003C/language>\n                \u003Clanguage ident=\"grc\">Ancient Greek\u003C/language>\n                \u003Clanguage ident=\"la\">Latin\u003C/language>\n                \u003Clanguage ident=\"he\">Hebrew\u003C/language>\n                \u003Clanguage ident=\"phn\">Phoenician\u003C/language>\n                \u003Clanguage ident=\"xpu\">Punic\u003C/language>\n                \u003Clanguage ident=\"osc\">Oscan\u003C/language>\n                \u003Clanguage ident=\"xly\">Elymian\u003C/language>\n                \u003Clanguage ident=\"scx\">Sikel\u003C/language>\n                \u003Clanguage ident=\"sxc\">Sikan\u003C/language>\n            \u003C/langUsage>\n            \u003CtextClass>\n                \u003Ckeywords scheme=\"http://www.eagle-network.eu/voc/typeins.html\">\n                    \u003Cterm ana=\"#function.funerary\" ref=\"http://www.eagle-network.eu/voc/typeins/lod/92.html\" cert=\"low\">funerary\u003C/term>\n                \u003C/keywords>\n            \u003C/textClass>\n        \u003C/profileDesc>\n        \u003CrevisionDesc status=\"draft\">\n            \u003ClistChange>\n                \u003Cchange when=\"2016-12-03\" who=\"#JCu\">James Cummings autogenerated EpiDoc output from database\u003C/change>\n            \t   \u003Cchange when=\"2020-10-05\" who=\"#SS\">Simona Stoyanova normalised Unicode\u003C/change>\n            \t   \u003Cchange when=\"2020-10-08\" who=\"#SS\">Simona Stoyanova updated list of languages\u003C/change>\n            \t   \u003Cchange when=\"2020-11-26\" who=\"#SS\">Simona Stoyanova restructured bibliography\u003C/change>\n\t    \u003Cchange when=\"2020-12-23\" who=\"#system\">Updated Zenodo DOI\u003C/change>\n            \t\u003Cchange when=\"2021-01-19\" who=\"#SS\">renumbered files, uris and references\u003C/change>\n                \u003Cchange when=\"2021-09-21\" who=\"#martaf\">Marta Fogagnolo revised the text encoding, added translations and commentary\u003C/change>\n\t\u003C/listChange>\n        \u003C/revisionDesc>\n    \u003C/teiHeader>\n    \u003Cfacsimile>\n        \u003Csurface type=\"front\">\n            \u003Cgraphic n=\"screen\" url=\"ISic003006_tiled.tif\" height=\"3680px\" width=\"5520px\">\n                \u003Cdesc>I.Sicily with the permission of the Assessorato Regionale dei Beni Culturali e dell’Identità Siciliana - Dipartimento dei Beni Culturali e dell’Identità Siciliana\u003C/desc>\n            \u003C/graphic>\n            \u003Cgraphic n=\"print\" url=\"ISic003006.jpg\" height=\"3680px\" width=\"5520px\">\n                \u003Cdesc>I.Sicily with the permission of the Assessorato Regionale dei Beni Culturali e dell’Identità Siciliana - Dipartimento dei Beni Culturali e dell’Identità Siciliana\u003C/desc>\n            \u003C/graphic>\n         \u003C/surface>\n    \u003C/facsimile>\n    \u003Ctext>\n        \u003Cbody>\n            \u003Cdiv type=\"edition\" xml:space=\"preserve\" xml:lang=\"grc\" resp=\"#martaf\">\n                \u003Cab>\n                    \u003Clb n=\"1\"/>\u003Csupplied reason=\"lost\">\u003Cw>ἐνθάδε\u003C/w> \u003Cw>κεῖνται\u003C/w>\u003C/supplied> \u003Cgap reason=\"lost\" extent=\"unknown\" unit=\"character\"/>\u003Corig>\u003Cunclear>Μ\u003C/unclear>ΩΝ\u003C/orig> \u003CpersName type=\"attested\">\u003Cname>\u003Cseg part=\"I\">Θεο\u003C/seg>\n                     \u003Clb n=\"2\" break=\"no\"/>\u003Cgap reason=\"lost\" extent=\"unknown\" unit=\"character\"/>\u003C/name>\u003C/persName> \u003Cspace extent=\"unknown\" unit=\"character\"/> \u003Cw>\u003Cchoice>\u003Corig>κὲ\u003C/orig>\u003Creg>καὶ\u003C/reg>\u003C/choice>\u003C/w> \u003CpersName type=\"attested\">\u003Cname>Μαξιμοῦλα\u003C/name>\u003C/persName>\n                \u003C/ab>\n            \u003C/div>\n            \u003Cdiv type=\"apparatus\" resp=\"#martaf\">\n                \u003Cp>\n                    \u003Capp>\u003Cnote>Text based on photographs\u003C/note>\u003C/app>\n                    \u003Capp loc=\"line 1\">\u003Cnote>Manganaro: [ἐνθάδε κεῖνται]\u003C/note>\u003C/app>\n                    \u003Capp loc=\"line 1\">\u003Cnote>Manganaro cautiously suggests the following integrations: [Εὐδαί]μων, Θεό[δουλος] or Θεό[κτιστος]\u003C/note>\u003C/app>\n                    \u003Capp loc=\"lines 1-2\">\u003Cnote>Ferrua: Θεο|[δοσίου Αὐγ. τὸ β´] κὲ Μαξιμου λα[μπρ. ἀνδρὸς τὸ β´]\u003C/note>\u003C/app>\n                \u003C/p>\n            \u003C/div>\n            \u003Cdiv type=\"translation\" xml:lang=\"en\" resp=\"martaf\">\n                \u003Cp>[Here rest] ---mon, Theo--- and Maximoula.\u003C/p>\n            \u003C/div>\n            \u003Cdiv type=\"translation\" xml:lang=\"it\" resp=\"martaf\">\n                \u003Cp>[Qui giacciono] ---mon, Theo--- e Maximoula.\u003C/p>\n            \u003C/div>\n            \u003Cdiv type=\"commentary\" resp=\"#martaf\">\n                \u003Cp>This is probably a Christian epitaph, whose only complete name, \u003Cforeign xml:lang=\"grc\">Μαξιμοῦλα\u003C/foreign>, is nevertheless problematic: it could be a variant of the most frequent name \u003Cforeign xml:lang=\"grc\">Μαξιμίλλα\u003C/foreign> (e.g. IG 14, no. 872) or the Greek translation of the Latin \u003Cforeign xml:lang=\"la\">Maximula\u003C/foreign>, attested CIL 8, no. 993 l. 1 (see Kajanto 1965: 276). Manganaro suggests an integration for the first name at l. 1 \u003Cforeign xml:lang=\"grc\">[Εὐδαί]μων\u003C/foreign>, for the second at ll. 1-2 \u003Cforeign xml:lang=\"grc\">Θεό[δουλος]\u003C/foreign> or \u003Cforeign xml:lang=\"grc\">Θεό[κτιστος]\u003C/foreign>. Especially \u003Cforeign xml:lang=\"grc\">Θεόδουλος\u003C/foreign> is frequently attested in the onomastics of the ancient Christians of Catania (see Korhonen 2004: 80): for \u003Cforeign xml:lang=\"grc\">Θεόδουλος\u003C/foreign> see IMusCatania 183 l. 4 = \u003Cref target=\"http://sicily.classics.ox.ac.uk/inscription/ISic001361\">ISic001361\u003C/ref>, IG 14, no. 538 l. 3 = \u003Cref target=\"http://sicily.classics.ox.ac.uk/inscription/ISic001357\">ISic001357\u003C/ref>.\u003C/p> \n                \u003Cp>Ferrua interprets the inscription differently and suggests the following integration at ll. 1-2 \u003Cforeign xml:lang=\"grc\">Θεο|[δοσίου Αὐγ. τὸ β´] κὲ Μαξιμου λα[μπρ. ἀνδρὸς τὸ β´]\u003C/foreign>. The inscription would mention the consuls for the year 388 CE, Theodosius, the Eastern Roman emperor, and not Flavius Merobaudes, the other consul in that year, but Maximus, who usurped the Western throne. According to Ferrua (1982-1983: 8), he was mentioned in the inscription \"in una specie di compromesso\" as a private man (\u003Cforeign xml:lang=\"grc\">λαμπρὸς ἀνήρ\u003C/foreign> and not \u003Cforeign xml:lang=\"grc\">Αὔγουστος\u003C/foreign>). The dating would therefore be the first part of the year (January/February?) of 388 CE since Maximus died in August of that year. Nevertheless, Ferrua’s integration seems arbitrary, since the fragment seems intact on the right.\u003C/p>\n            \u003C/div>\n            \u003Cdiv type=\"bibliography\">\n                \u003ClistBibl type=\"edition\">\n                    \u003Cbibl type=\"bulletin\" n=\"SEG\">\n                        \u003CcitedRange>36.0839\u003C/citedRange>\n                        \u003Cptr target=\"http://zotero.org/groups/382445/items/F2GG87EQ\"/>\n                    \u003Cref target=\"https://biblio.inscriptiones.org/epig10000796\">https://biblio.inscriptiones.org/epig10000796\u003C/ref>\u003C/bibl>\n                    \u003Cbibl type=\"bulletin\" n=\"BE\">\n                        \u003CcitedRange>1962.0389\u003C/citedRange>\n                        \u003Cptr target=\"http://zotero.org/groups/382445/items/77P5MNIR\"/>\n                    \u003Cref target=\"https://biblio.inscriptiones.org/epig10001282\">https://biblio.inscriptiones.org/epig10001282\u003C/ref>\u003C/bibl>\n                    \u003Cbibl>\n                        \u003Cauthor>Manganaro\u003C/author>\n                        \u003Cdate>1961\u003C/date>\n                        \u003CcitedRange>196 fig. 21\u003C/citedRange>\n                        \u003Cptr target=\"http://zotero.org/groups/382445/items/HXK7DASC\"/>\n                    \u003Cref target=\"https://biblio.inscriptiones.org/epig10001852\">https://biblio.inscriptiones.org/epig10001852\u003C/ref>\u003C/bibl>\n                    \u003Cbibl>\n                        \u003Cauthor>Ferrua\u003C/author>\n                        \u003Cdate>1982-1983\u003C/date>\n                        \u003CcitedRange>7 no. 15\u003C/citedRange>\n                        \u003Cptr target=\"http://zotero.org/groups/382445/items/Q7DDNWD6\"/>\n                    \u003Cref target=\"https://biblio.inscriptiones.org/epig10001996\">https://biblio.inscriptiones.org/epig10001996\u003C/ref>\u003C/bibl>\n                \u003C/listBibl>\n                \u003ClistBibl type=\"discussion\">\n                    \u003Cbibl>\n                        \u003Cauthor>Kajanto\u003C/author>\n                        \u003Cdate>1965\u003C/date>\n                        \u003CcitedRange>276\u003C/citedRange>\n                        \u003Cptr target=\"http://zotero.org/groups/382445/items/U5XTFBQ7\"/>\n                    \u003Cref target=\"https://biblio.inscriptiones.org/epig10002342\">https://biblio.inscriptiones.org/epig10002342\u003C/ref>\u003C/bibl>\n                    \u003Cbibl>\n                        \u003Cauthor>Korhonen\u003C/author>\n                        \u003Cdate>2004\u003C/date>\n                        \u003CcitedRange>80\u003C/citedRange>\n                        \u003Cptr target=\"http://zotero.org/groups/382445/items/2EUC82DH\"/>\n                    \u003Cref target=\"https://biblio.inscriptiones.org/epig10000028\">https://biblio.inscriptiones.org/epig10000028\u003C/ref>\u003C/bibl>\n                \u003C/listBibl>\n            \u003C/div>\n        \u003C/body>\n    \u003C/text>\n\u003C/TEI>\n"],"uses":{"params":["slug"]}}]}
